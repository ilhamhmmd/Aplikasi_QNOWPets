<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_headerapakelinci"
            android:src="@mipmap/kelinci"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_headerapakelinci"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:background="#85000000"
            android:paddingRight="10dp"
            android:text="Apa Itu Kelinci ?"/>


        <TextView
            android:layout_below="@id/iv_headerapakelinci"
            android:id="@+id/par1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="Kelinci adalah hewan mamalia dari famili Leporidae, yang dapat ditemukan di banyak bagian bumi."/>

        <TextView
            android:id="@+id/par2"
            android:layout_below="@id/par1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Kelinci berkembangbiak dengan cara beranak yang disebut vivipar."/>

        <TextView
            android:id="@+id/par3"
            android:layout_below="@id/par2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Dulunya, hewan ini adalah hewan liar yang hidup di Afrika hingga ke daratan Eropa. Pada perkembangannya, tahun 1912, kelinci diklasifikasikan dalam ordo Lagomorpha. Ordo ini dibedakan menjadi dua famili, yakni Ochtonidae (jenis pika yang pandai bersiul) dan Leporidae (termasuk di dalamnya jenis kelinci dan terwelu)."/>

        <TextView
            android:id="@+id/par4"
            android:layout_below="@id/par3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Asal kata kelinci berasal dari bahasa Belanda, yaitu konijntje yang berarti 'anak kelinci'. Hal ini menunjukkan bahwa masyarakat Nusantara mulai mengenali kelinci saat masa kolonial, padahal di Pulau Sumatera ada satu spesies asli kelinci sumatera (Nesolagus netscheri) yang baru ditemukan pada tahun 1972." />

        <TextView
            android:id="@+id/par5"
            android:layout_below="@id/par4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Saat ini sejumlah jenis kelinci menjadi hewan peliharaan dan hewan pedaging. Beberapa jenis kelinci sebagai hewan pedaging juga ada yang dijadikan hewan peliharaan."/>

        <TextView
            android:id="@+id/par6"
            android:layout_below="@id/par5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:text="Jenis kelinci terbesar di dunia, yaitu Continental Giant biasanya dijadikan hewan pedaging, tetapi ada juga yang memeliharanya dan secara resmi telah menjadi kelinci terbesar di dunia dengan tingi/panjang 4 feet + 4 inci (132 sentimeter) dan berat 3,5 stones (22,2 kilogram)."/>
    </RelativeLayout>
</ScrollView>